<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="100dp"
    android:layout_height="match_parent"
    tools:context=".MoviesFriendFragment">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:background="@drawable/cuddlebug_blank_app_background"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="top|center_horizontal|center_vertical"


            android:text="@string/common_movies"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />


        <ListView
            android:id="@+id/MovieViewFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="89dp"
            android:layout_marginEnd="-4dp" />


    </RelativeLayout>



</FrameLayout>