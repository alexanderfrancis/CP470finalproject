<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/cuddlebug_blank_app_background"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.my_list.My_List_Fragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="top|center_horizontal|center_vertical"


        android:text="@string/title_my_list"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />


    <ListView
        android:id="@+id/MovieView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="-4dp" />

    <TextView
        android:id="@+id/text_my_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white" />
</RelativeLayout>